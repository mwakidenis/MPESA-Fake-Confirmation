<?xml version="1.0" encoding="utf-8"?>
<widget id="com.mpesify.denniskabui" version="1.0.0" android-versionCode="1" ios-CFBundleVersion="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android">
